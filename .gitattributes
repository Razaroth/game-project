# Normalize line endings for cross-platform consistency
* text=auto

# Keep repository text files in LF
*.py   text eol=lf
*.md   text eol=lf
*.txt  text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css  text eol=lf
*.js   text eol=lf
*.ts   text eol=lf
*.toml text eol=lf
*.ini  text eol=lf
*.cfg  text eol=lf
*.sh   text eol=lf

# Windows-native scripts
*.ps1  text eol=crlf
*.bat  text eol=crlf
*.cmd  text eol=crlf

# Binary files
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.pdf  binary
*.zip  binary